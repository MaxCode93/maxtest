<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme (Light) -->
    <style name="Theme.FireNetStats" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorSecondary">@color/secondary_color</item>
        <item name="colorSecondaryVariant">@color/secondary_variant</item>
        <item name="android:colorBackground">@color/background_color</item>
        <item name="colorSurface">@color/surface_color</item>
        <item name="colorSurfaceVariant">@color/surface_variant</item>
        <item name="dividerColor">@color/divider_color</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorOnBackground">@color/text_primary</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="android:statusBarColor">@color/background_color</item>
        <item name="android:navigationBarColor">@color/background_color</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">true</item>
    </style>
    
    <!-- Dialog theme para la configuraci칩n del widget -->
    <style name="Theme.FireNetStats.Dialog" parent="Theme.MaterialComponents.Light.Dialog.MinWidth">
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorSecondary">@color/secondary_color</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:colorBackground">@color/surface_color</item>
        <item name="colorSurface">@color/surface_color</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorOnBackground">@color/text_primary</item>
        <item name="android:windowMinWidthMajor">85%</item>
        <item name="android:windowMinWidthMinor">85%</item>
        <item name="android:windowBackground">@drawable/settings_background</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:statusBarColor">@color/background_color</item>
        <item name="android:navigationBarColor">@color/background_color</item>
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
        <item name="materialButtonStyle">@style/Widget.FireNetStats.Button</item>
        <item name="radioButtonStyle">@style/Widget.FireNetStats.RadioButton</item>
        <item name="seekBarStyle">@style/Widget.FireNetStats.SeekBar</item>
    </style>

    <!-- Animaci칩n para el di치logo -->
    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

    <!-- Tema transparente para la actividad de intercept -->
    <style name="Theme.Transparent" parent="Theme.FireNetStats">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>

    <!-- Tema para di치logo flotante independiente -->
    <style name="Theme.FireNetStats.InterceptDialog" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorSecondary">@color/secondary_color</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:colorBackground">@color/surface_color</item>
        <item name="colorSurface">@color/surface_color</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorOnBackground">@color/text_primary</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:statusBarColor">@color/background_color</item>
        <item name="android:navigationBarColor">@color/background_color</item>
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
        <item name="materialButtonStyle">@style/Widget.FireNetStats.Button</item>
        <item name="radioButtonStyle">@style/Widget.FireNetStats.RadioButton</item>
        <item name="seekBarStyle">@style/Widget.FireNetStats.SeekBar</item>
    </style>

    <!-- Estilo para botones -->
    <style name="Widget.FireNetStats.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textSize">14sp</item>
        <item name="cornerRadius">12dp</item>
    </style>

    <!-- Estilo para RadioButton -->
    <style name="Widget.FireNetStats.RadioButton" parent="Widget.MaterialComponents.CompoundButton.RadioButton">
        <item name="android:paddingStart">8dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <!-- Estilo para SeekBar -->
    <style name="Widget.FireNetStats.SeekBar" parent="Widget.AppCompat.SeekBar">
        <item name="android:progressBackgroundTint">@color/divider_color</item>
        <item name="android:progressTint">@color/primary_color</item>
        <item name="android:thumbTint">@color/primary_color</item>
    </style>

    <!-- Estilo para ToggleButton -->
    <style name="Widget.FireNetStats.ToggleButton" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:background">@drawable/button_toggle_selector</item>
        <item name="android:padding">5dp</item>
        <item name="android:minHeight">30dp</item>
    </style>

    <!-- Styles para colores primarios -->
    <style name="PrimaryColorDefault" parent="Theme.FireNetStats">
        <item name="colorPrimary">#FF5722</item>
        <item name="colorPrimaryVariant">#E64A19</item>
    </style>

    <style name="PrimaryColorBlue" parent="Theme.FireNetStats">
        <item name="colorPrimary">#2196F3</item>
        <item name="colorPrimaryVariant">#1976D2</item>
    </style>

    <style name="PrimaryColorRed" parent="Theme.FireNetStats">
        <item name="colorPrimary">#F44336</item>
        <item name="colorPrimaryVariant">#D32F2F</item>
    </style>

    <style name="PrimaryColorGreen" parent="Theme.FireNetStats">
        <item name="colorPrimary">#4CAF50</item>
        <item name="colorPrimaryVariant">#388E3C</item>
    </style>

    <style name="PrimaryColorYellow" parent="Theme.FireNetStats">
        <item name="colorPrimary">#FFEB3B</item>
        <item name="colorPrimaryVariant">#FBC02D</item>
    </style>

    <style name="PrimaryColorPurple" parent="Theme.FireNetStats">
        <item name="colorPrimary">#9C27B0</item>
        <item name="colorPrimaryVariant">#7B1FA2</item>
    </style>

    <style name="PrimaryColorOrange" parent="Theme.FireNetStats">
        <item name="colorPrimary">#FF9800</item>
        <item name="colorPrimaryVariant">#F57C00</item>
    </style>
	
	<style name="Theme.FireNetStats.FloatingDialog" parent="Theme.MaterialComponents.Light.Dialog">
		<item name="android:windowIsTranslucent">true</item>
		<item name="android:windowBackground">@android:color/transparent</item>
		<item name="android:backgroundDimEnabled">true</item>
		<item name="android:backgroundDimAmount">0.6</item>
		<item name="android:windowCloseOnTouchOutside">true</item>
		<item name="android:windowIsFloating">true</item>
		<item name="android:windowNoTitle">true</item>
		<item name="android:windowAnimationStyle">@style/DialogAnimation.Modern</item>
	</style>

	<style name="DialogAnimation.Modern">
		<item name="android:windowEnterAnimation">@anim/dialog_scale_in</item>
		<item name="android:windowExitAnimation">@anim/dialog_scale_out</item>
	</style>

    <style name="Theme.FireNetStats.ForceUpdateDialog" parent="Theme.MaterialComponents.DayNight.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.6</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@style/DialogAnimation.Modern</item>
    </style>

</resources>
