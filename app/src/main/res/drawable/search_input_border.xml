<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Fondo transparente para que no compita con el CardView -->
    <solid android:color="@android:color/transparent" />

    <!-- Borde visible pero limpio -->
    <stroke
        android:width="1dp"
        android:color="?attr/colorPrimary" />

    <!-- Esquinas suaves tipo Material -->
    <corners android:radius="12dp" />

    <!-- Muy importante: quitar padding interno -->
    <padding
        android:left="0dp"
        android:top="0dp"
        android:right="0dp"
        android:bottom="0dp" />
</shape>
