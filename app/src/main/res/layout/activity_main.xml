<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    tools:context=".MainActivity">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/headerContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/header_gradient_background"
        android:elevation="6dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingTop="12dp"
        android:paddingEnd="16dp"
        android:paddingBottom="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Lado izquierdo: Icono + Título más compacto -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <!-- Icono más pequeño -->
            <FrameLayout
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_marginEnd="6dp"
                android:background="@drawable/app_icon_background">

                <ImageView
                    android:id="@+id/ivAppIcon"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:layout_gravity="center"
                    android:scaleType="centerCrop"
                    android:src="@drawable/header_icon" />

            </FrameLayout>

            <!-- Título más compacto -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvAppTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:letterSpacing="0.02"
                    android:text="@string/app_name"
                    android:textColor="?attr/colorPrimary"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvAppSubtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:alpha="0.85"
                    android:fontFamily="sans-serif-medium"
                    android:letterSpacing="0.05"
                    android:text="@string/app_subtitle"
                    android:textColor="@color/text_secondary"
                    android:textSize="13sp" />

            </LinearLayout>
        </LinearLayout>

        <!-- Botones más pequeños -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <!-- Botón animado de Firewall (solo visible en la pestaña Firewall) -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/firewallToggleButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginEnd="12dp"
                android:clickable="true"
                android:focusable="true"
                android:visibility="gone"
                app:cardCornerRadius="24dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/surface_color">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="8dp">

                    <!-- Ícono de firewall -->
                    <ImageView
                        android:id="@+id/firewallToggleIcon"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:contentDescription="@string/firewall"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_power_on"
                        app:tint="@color/white" />

                    <!-- Loading circular -->
                    <ProgressBar
                        android:id="@+id/firewallToggleProgress"
                        style="?android:attr/progressBarStyle"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_gravity="center"
                        android:visibility="gone"
                        android:indeterminateTint="?attr/colorPrimary" />

                    <!-- Check verde/amarillo -->
                    <ImageView
                        android:id="@+id/firewallToggleCheck"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:contentDescription="@string/firewall"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_check"
                        android:visibility="gone"
                        app:tint="@color/white" />

                </FrameLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Botón de Update con badge -->
            <FrameLayout
                android:id="@+id/btnUpdateContainer"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="8dp"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/btnUpdate"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/button_elevated_background"
                    android:clickable="true"
                    android:contentDescription="@string/check_for_updates"
                    android:focusable="true"
                    android:padding="10dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_update"
                    app:tint="@color/text_primary" />

                <!-- Punto rojo con efecto de pulso -->
                <ImageView
                    android:id="@+id/updateBadge"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_gravity="top|end"
                    android:layout_marginTop="2dp"
                    android:layout_marginEnd="2dp"
                    android:contentDescription="@string/update_available"
                    android:src="@drawable/red_badge_circle" />

            </FrameLayout>

            <ImageView
                android:id="@+id/btnWidgetConfig"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/button_elevated_background"
                android:clickable="true"
                android:contentDescription="@string/widget_settings"
                android:focusable="true"
                android:padding="10dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_widget_config"
                app:tint="@color/text_primary" />

            <ImageView
                android:id="@+id/btnAboutInfo"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/button_elevated_background"
                android:clickable="true"
                android:contentDescription="@string/about_app"
                android:focusable="true"
                android:padding="10dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_info"
                app:tint="@color/text_primary" />

        </LinearLayout>
    </LinearLayout>

    <!-- ViewPager2 -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/bottomNavigationView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/headerContainer" />

    <!-- Bottom Navigation View -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:background="@drawable/bottom_navigation_background"
        android:elevation="8dp"
        android:paddingStart="12dp"
        android:paddingTop="0dp"
        android:paddingEnd="12dp"
        android:paddingBottom="0dp"
        app:itemBackground="@drawable/bottom_nav_item_background"
        app:itemIconTint="@color/bottom_nav_item_color"
        app:itemPaddingBottom="8dp"
        app:itemPaddingTop="8dp"
        app:itemTextColor="@color/bottom_nav_item_color"
        app:labelVisibilityMode="labeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/bottom_navigation_menu" />

</androidx.constraintlayout.widget.ConstraintLayout>
