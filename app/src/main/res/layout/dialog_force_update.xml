<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="32dp"
    app:cardCornerRadius="24dp"
    app:cardElevation="16dp"
    app:cardBackgroundColor="@color/card_background"
    app:strokeColor="@color/firewall_red"
    app:strokeWidth="2dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="24dp">

        <!-- Icono de warning -->
        <ImageView
            android:id="@+id/ivWarningIcon"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_warning_amber"
            android:contentDescription="Actualización requerida"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Título principal con gradiente -->
        <TextView
            android:id="@+id/tvForceUpdateTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:text="ACTUALIZACIÓN OBLIGATORIA"
            android:textColor="@color/firewall_red"
            android:textSize="22sp"
            android:textStyle="bold"
            android:shadowColor="@color/black_overlay"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivWarningIcon"
            tools:ignore="UnknownId" />

        <!-- Subtítulo -->
        <TextView
            android:id="@+id/tvForceUpdateSubtitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="Esta versión ya no es compatible"
            android:textColor="@color/text_secondary"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvForceUpdateTitle" />

        <!-- Información de versión en card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/versionCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="12dp"
            app:cardBackgroundColor="@color/surface_color"
            app:cardElevation="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvForceUpdateSubtitle">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Versión actual: "
                    android:textColor="@color/text_secondary"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tvCurrentVersion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1.0.0"
                    android:textColor="@color/firewall_red"
                    android:textSize="13sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Divisor decorativo -->
        <View
            android:id="@+id/divider"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/gradient_divider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/versionCard" />

        <!-- Mensaje personalizado -->
        <ScrollView
            android:id="@+id/scrollViewMessage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:maxHeight="120dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider">

            <TextView
                android:id="@+id/tvForceUpdateMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Se ha detectado una actualización crítica de seguridad. Debe actualizar inmediatamente para continuar usando la aplicación."
                android:textColor="@color/text_primary"
                android:textSize="15sp"
                android:lineSpacingExtra="6dp"
                android:padding="8dp" />

        </ScrollView>

        <!-- Información adicional -->
        <TextView
            android:id="@+id/tvAdditionalInfo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:text="La aplicación se cerrará si no actualiza"
            android:textColor="@color/text_secondary"
            android:textSize="12sp"
            android:textStyle="italic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/scrollViewMessage" />

        <!-- Botones -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:orientation="vertical"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvAdditionalInfo">

            <!-- Botón principal de descarga -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnForceDownload"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="12dp"
                android:text="DESCARGAR ACTUALIZACIÓN"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:backgroundTint="@color/firewall_red"
                app:cornerRadius="16dp"
                app:icon="@drawable/ic_download"
                app:iconGravity="textStart"
                app:iconPadding="12dp"
                app:iconTint="@color/white"
                app:rippleColor="@color/white_overlay" />

            <!-- Botón de cerrar aplicación -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnForceClose"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="CERRAR APLICACIÓN"
                android:textColor="@color/firewall_red"
                android:textSize="14sp"
                android:backgroundTint="@color/card_background"
                app:cornerRadius="12dp"
                app:strokeColor="@color/firewall_red"
                app:strokeWidth="2dp"
                app:icon="@drawable/ic_cancel"
                app:iconGravity="textStart"
                app:iconTint="@color/firewall_red"
                app:iconPadding="8dp" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>