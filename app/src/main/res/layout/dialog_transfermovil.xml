<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp">

    <!-- Datos Container -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        app:cardCornerRadius="14dp"
        app:cardElevation="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Número - Premium Style -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingVertical="12dp"
                android:paddingHorizontal="12dp"
                android:background="?attr/selectableItemBackground"
                android:layout_marginBottom="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="0dp"
                        android:backgroundTint="?attr/colorPrimary"
                        android:layout_marginEnd="12dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_phone"
                            android:contentDescription="Teléfono"
                            android:padding="8dp"/>

                    </com.google.android.material.card.MaterialCardView>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Número Móvil"
                            android:textColor="@color/text_secondary"
                            android:textSize="10sp"
                            android:letterSpacing="0.05" />

                        <TextView
                            android:id="@+id/tvTransfermovilNumber"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="+5355770892"
                            android:textColor="?attr/colorPrimary"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_marginTop="4dp"
                            android:letterSpacing="0.02" />

                    </LinearLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnCopyNumber"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:insetLeft="0dp"
                        android:insetTop="0dp"
                        android:insetRight="0dp"
                        android:insetBottom="0dp"
                        app:cornerRadius="8dp"
                        app:strokeColor="?attr/colorPrimary"
                        app:strokeWidth="1dp"
                        app:icon="@drawable/ic_copy"
                        app:iconGravity="textStart"
                        app:iconTint="?attr/colorPrimary"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:contentDescription="Copiar" />

                </LinearLayout>

            </LinearLayout>

            <!-- Separador elegante -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?attr/dividerColor"
                android:layout_marginHorizontal="4dp" />

            <!-- Beneficiario - Premium Style -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingVertical="12dp"
                android:paddingHorizontal="12dp"
                android:background="?attr/selectableItemBackground"
                android:layout_marginTop="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="0dp"
                        android:backgroundTint="?attr/colorPrimary"
                        android:layout_marginEnd="12dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_person"
                            android:contentDescription="Persona"
                            android:padding="8dp"/>

                    </com.google.android.material.card.MaterialCardView>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Desarrollador"
                            android:textColor="@color/text_secondary"
                            android:textSize="10sp"
                            android:letterSpacing="0.05" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Maxwell"
                            android:textColor="?attr/colorPrimary"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:layout_marginTop="4dp" />

                    </LinearLayout>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="0dp"
                        android:backgroundTint="?attr/colorPrimary">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_check"
                            android:contentDescription="Verificado"
                            android:padding="4dp"/>

                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Action Buttons Row -->

</LinearLayout>
